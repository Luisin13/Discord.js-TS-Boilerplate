{
  "compilerOptions": {
    "module": "CommonJS",
    "declaration": false,
    "removeComments": false,
    "allowSyntheticDefaultImports": true,
    "target": "es6",
    "outDir": "./build",
    "baseUrl": ".",
    "incremental": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,
    "sourceMap": false,
    "skipLibCheck": true,
    "pretty": true,
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "build"]
}
